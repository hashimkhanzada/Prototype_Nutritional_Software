@page
@model FoodFilesSoftwareAssignment.RegisterPageModel
@{
    ViewData["Title"] = "Register Page";
}

<h1>Register Account</h1>

@* Bootstrap used for styling *@
<form method="post">

    @* Email Address*@
    <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail" placeholder="Email">
        </div>
    </div>

    @* Password *@
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword" placeholder="Password">
        </div>
    </div>

    @* Name *@
    <div class="form-group row">
        <label for="inputFirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputFirstName" placeholder="First Name">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputLastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputLastName" placeholder="Last Name">
        </div>
    </div>

    @* Age *@
    <div class="form-group row">
        <label for="inputAge" class="col-sm-2 col-form-label">Age</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputAge" placeholder="Age">
        </div>
    </div>

    @* Height *@
    <div class="form-group row">
        <label for="inputHeight" class="col-sm-2 col-form-label">Height</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputHeight" placeholder="Height">
        </div>
    </div>

    @* Weight *@
    <div class="form-group row">
        <label for="inputWeight" class="col-sm-2 col-form-label">Weight</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputWeight" placeholder="Weight">
        </div>
    </div>

    @* Gender *@

    <fieldset class="form-group">
        <div class="row">
            <div class="col-form-label col-sm-2 pt-0">Gender</div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="radioGender" id="radioboxMale" value="Male" checked>
                    <label class="form-check-label" for="radioboxMale">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="radioGender" id="radioboxFemale" value="Female">
                    <label class="form-check-label" for="radioboxFemale">
                        Female
                    </label>
                </div>
            </div>
        </div>
    </fieldset>

    @* Submit *@

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </div>



</form>

