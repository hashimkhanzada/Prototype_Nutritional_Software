@page
@model FoodFilesSoftwareAssignment.SelectFoodModel
@{
    ViewData["Title"] = "SelectFood";
}

<h1>Select Food</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserFood.FoodId" class="control-label">Choose a Food</label>
        <select asp-for="UserFood.FoodId" asp-items="Model.NzFoodFiles" class="form-control"></select>
        <span asp-validation-for="UserFood.FoodId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserFood.Quantity" class="control-label">Quantity (Note: All foods are measured in 100g amounts)</label>
        <input asp-for="UserFood.Quantity" class="form-control" />
        <span asp-validation-for="UserFood.Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Order Food" class="btn btn-primary" />
    </div>
</form>

