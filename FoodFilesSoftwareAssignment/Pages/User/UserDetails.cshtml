@page
@model FoodFilesSoftwareAssignment.CreateUserModel
@{
    ViewData["Title"] = "UserDetails";
}

<h1>UserDetails</h1>

<h2>@Model.UserId</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UserDetails.FirstName" class="control-label"></label>
        <select asp-for="UserDetails.FirstName" class="form-control"></select>
        <span asp-validation-for="UserDetails.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserDetails.LastName" class="control-label"></label>
        <select asp-for="UserDetails.LastName" class="form-control"></select>
        <span asp-validation-for="UserDetails.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserDetails.Age" class="control-label"></label>
        <select asp-for="UserDetails.Age" class="form-control"></select>
        <span asp-validation-for="UserDetails.Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserDetails.Height" class="control-label"></label>
        <select asp-for="UserDetails.Height" class="form-control"></select>
        <span asp-validation-for="UserDetails.Height" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserDetails.Weight" class="control-label"></label>
        <select asp-for="UserDetails.Weight" class="form-control"></select>
        <span asp-validation-for="UserDetails.Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Details" class="btn btn-primary" />
    </div>


</form>

